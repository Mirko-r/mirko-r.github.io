---
import "../styles/global.css";
import { getCollection } from "astro:content";
import SystemStat from "../components/SystemStat";
import StatusDot from "../components/StatusDot";

const allProjects = await getCollection("projects");
const allCareer = await getCollection("career");

const projects = allProjects.sort(
  (a, b) => (a.data.order || 0) - (b.data.order || 0),
);

const career = allCareer.sort((a, b) => {
  const dateA = new Date(a.data.startDate).getTime();
  const dateB = new Date(b.data.startDate).getTime();
  return dateB - dateA;
});

const techStack = [
  "React",
  "Astro",
  "Node.js",
  "TypeScript",
  "Tailwind",
  "Dapper",
  ".NET",
  "C#",
  "SQL",
  "Java",
  "Kotlin",
  "Flutter",
  "Bash",
];
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MIRKO R. // SYSTEM_OS</title>
  </head>
  <body class="p-6 md:p-16 selection:bg-[var(--nt-red)] selection:text-white">
    <main class="max-w-6xl mx-auto space-y-24">
      <section
        class="py-24 md:py-32 flex flex-col items-start relative group/hero"
      >
        <div class="relative">
          <h1
            class="text-[18vw] md:text-[12rem] font-black uppercase tracking-tighter leading-[0.75] text-white"
          >
            Mirko<br /> Rovere
          </h1>
          <div class="absolute -top-4 -right-12 md:-right-20">
            <StatusDot size="h-8 w-8 md:h-14 md:w-14" client:load />
          </div>
        </div>
        <div class="mt-12 flex items-center gap-6">
          <div class="h-px w-12 bg-zinc-800"></div>
          <p
            class="text-zinc-500 font-mono text-xs md:text-sm tracking-[0.5em] uppercase italic"
          >
            [ Software_Developer // v.2026 ]
          </p>
        </div>
      </section>

      <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
        <section
          class="nt-card md:col-span-5 group flex flex-col justify-between"
        >
          <h2 class="nt-title">/ Internal_Clock</h2>
          <div class="py-8">
            <SystemStat client:load />
          </div>
        </section>

        <section class="nt-card md:col-span-7 group">
          <div class="flex justify-between items-center mb-10">
            <h2 class="nt-title">/ Tech_Stack</h2>
            <span
              class="text-[9px] font-mono text-muted tracking-widest uppercase"
              >Kernel_Modules</span
            >
          </div>
          <div class="flex flex-wrap gap-2">
            {
              techStack.map((s) => (
                <span class="px-4 py-2 border border-zinc-900 rounded-full text-[10px] font-bold uppercase tracking-widest text-main transition-colors border-inherit tech-tag">
                  {s}
                </span>
              ))
            }
          </div>
        </section>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
        <section class="nt-card md:col-span-8 group">
          <h2 class="nt-title mb-12">/ Experience_Logs</h2>
          <div class="space-y-12">
            {
              career.slice(0, 3).map((job) => (
                <div class="relative pl-10 group/job">
                  <div class="absolute left-0 top-0 w-[1px] h-full bg-zinc-900 group-hover/job:bg-[var(--nt-red)] transition-colors" />
                  <div class="absolute left-[-4px] top-0 w-2 h-2 bg-zinc-800 rounded-full group-hover/job:bg-[var(--nt-red)] transition-all" />

                  <p class="text-[10px] font-mono mb-2 uppercase tracking-widest text-muted">
                    {job.data.startDate} — {job.data.endDate || "Active"}
                  </p>
                  <h3 class="text-2xl font-bold uppercase tracking-tighter text-main">
                    {job.data.position}
                  </h3>
                  <p class="text-xs uppercase tracking-[0.3em] font-semibold mt-1 text-muted opacity-80">
                    {job.data.company}
                  </p>
                </div>
              ))
            }
          </div>
        </section>

        <section
          class="nt-card md:col-span-4 flex flex-col items-center justify-center text-center group"
        >
          <h2 class="nt-title absolute top-10 left-10">/ Nodes</h2>
          <div
            class="text-[13rem] font-black leading-none tracking-tighter transition-all duration-700 text-main group-hover:scale-110"
          >
            {projects.length.toString().padStart(2, "0")}
          </div>
          <div class="mt-4 flex flex-col items-center">
            <div
              class="h-1 w-8 bg-[var(--nt-red)] mb-4 transition-all group-hover:w-24"
            >
            </div>
            <p
              class="text-[10px] uppercase font-mono tracking-[0.5em] italic text-muted"
            >
              Verified_Deployments
            </p>
          </div>
        </section>
      </div>

      <section class="space-y-10 pt-12">
        <div
          class="flex items-end justify-between px-4 border-b border-zinc-900 pb-6"
        >
          <div>
            <h2 class="nt-title text-main">/ Project_Database</h2>
            <p
              class="text-[9px] font-mono text-muted mt-2 uppercase tracking-[0.2em]"
            >
              Status: all_systems_operational // Indexing_Complete
            </p>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4">
          {
            projects.map((p, index) => (
              <a href={p.data.link} target="_blank" class="nt-card block group">
                <div class="flex flex-col md:flex-row md:items-center gap-8">
                  <div class="hidden md:flex flex-col items-center justify-center border-r border-zinc-900 group-hover:border-zinc-200 pr-10 transition-all duration-500">
                    <span class="text-[10px] font-mono text-muted mb-1 uppercase tracking-widest transition-colors">
                      Seq_
                    </span>
                    <span class="text-7xl font-black tracking-tighter transition-all duration-500 opacity-20 group-hover:opacity-100 text-white group-hover:!text-[var(--nt-red)]">
                      {(index + 1).toString().padStart(2, "0")}
                    </span>
                  </div>

                  <div class="flex-1 space-y-4">
                    <div class="flex items-center gap-4 md:hidden">
                      <span class="text-[10px] font-mono text-[var(--nt-red)] font-bold">
                        ID:0{index + 1}
                      </span>
                    </div>

                    <h3 class="text-3xl md:text-5xl font-black uppercase tracking-tighter text-main">
                      {p.data.title}
                    </h3>

                    <p class="text-sm md:text-base font-medium max-w-2xl text-muted leading-relaxed">
                      {p.data.description}
                    </p>

                    <div class="flex flex-wrap gap-2">
                      {p.data.tags.map((t) => (
                        <span class="text-[9px] font-mono uppercase px-2 py-1 bg-zinc-950 text-zinc-500 rounded border border-zinc-900 group-hover:bg-zinc-100 group-hover:text-zinc-900 group-hover:border-zinc-200 transition-all">
                          {t}
                        </span>
                      ))}
                    </div>
                  </div>

                  <div class="flex items-center justify-end">
                    <div class="h-14 w-14 md:h-20 md:w-20 rounded-full border border-zinc-900 flex items-center justify-center group-hover:bg-black group-hover:border-black transition-all duration-500 group-hover:rotate-45">
                      <span class="text-white text-3xl md:text-4xl">→</span>
                    </div>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <footer
        class="py-24 border-t border-zinc-900 flex flex-col md:flex-row justify-between items-center gap-8"
      >
        <p
          class="text-[10px] text-zinc-600 font-mono uppercase tracking-[0.5em]"
        >
          © 2026 MIRKO R. <span class="text-[var(--nt-red)] animate-pulse"
            >_</span
          > SYSTEM_STBL
        </p>
      </footer>
    </main>
  </body>
</html>
